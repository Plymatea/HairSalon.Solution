@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;  

<h4>Stylists</h4>

@if (@Model.Count == 0)
{
  <h5>No stylists have been added yet!</h5>
} 

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId }) | Client Count : @stylist.Clients.Count</li>
  }
</ul>
<hr/>
<p>@Html.ActionLink("Add new stylist", "Create")</p>